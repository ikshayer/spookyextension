{
  "manifest_version": 3,
  "name": "Haunted Browser",
  "version": "1.0",
  "description": "Spooky ambient visuals for your browsing session.",
  "permissions": ["storage", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["public/images/*", "public/audio/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
